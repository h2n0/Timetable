<!DOCTYPE html>

<html>
	<head>
		<meta charset="utf-8"/>
		<link rel="stylesheet" type="text/css" href="css/style.css">
		
		<script>
		
			function $(id){
				return document.getElementById(id);
			}
			
			window.onload = function(){
			
				var num = $("id");
				var btn = $("btn");
				
				num.addEventListener("onkeyup", function(){
					if(num.value == ""){
						btn.clasList.add("invalid");
					}else{
						btn.clasList.remove("invalid");
					}
				});
			}
			
			
		
		</script>
	</head>

	<body>
		<h1>Simple Timetable</h1>


		<input type="number" id="id" placeholder="964552" required></input>
		<div id="btn">Away!</div>
	</body>
</html>
